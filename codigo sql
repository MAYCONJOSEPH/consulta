CREATE TABLE PACIENTE (
NOME VARCHAR(10),
Telefone NUMERIC(11),
DATA DE NASCIMENTO SMALLDATETIME,
GENERO VARCHAR(2),
ID_PACIENTE NUMERIC(10) PRIMARY KEY,
EMAIL VARCHAR(20),
ENDERECO VARCHAR(20)
)

CREATE TABLE MEDICO (
ID_MEDICO NUMERIC(10) PRIMARY KEY,
Telefone NUMERIC(11),
NOME VARCHAR(20),
ESPECIALIDADE VARCHAR(20)
)

CREATE TABLE CONSULTA (
ID_CONSULTA NUMERIC(10) PRIMARY KEY,
DATA E HORA SMALLDATETIME,
ID_PACIENTE NUMERIC(10),
ID_MEDICO NUMERIC(10),
OBS VARCHAR(50),
DIAGNOSTICO VARCHAR(50),

FOREIGN KEY(ID_PACIENTE) REFERENCES PACIENTE (ID_PACIENTE),
FOREIGN KEY(ID_MEDICO) REFERENCES MEDICO (ID_MEDICO),
FOREIGN KEY(ID_PACIENTE) REFERENCES PACIENTE (ID_PACIENTE),
FOREIGN KEY(ID_MEDICO) REFERENCES MEDICO (ID_MEDICO)
)

CREATE TABLE PRESCRICAO (
ID_PRESCRICAO VARCHAR(50) PRIMARY KEY,
MEDICAMENTO VARCHAR(20),
INSTRUCOES VARCHAR(50),
DOSAGEM VARCHAR(10),
ID_CONSULTA NUMERIC(10),
ID_PACIENTE NUMERIC(10),
ID_MEDICO NUMERIC(10),
FOREIGN KEY(ID_CONSULTA) REFERENCES CONSULTA (ID_CONSULTA),
FOREIGN KEY(ID_PACIENTE) REFERENCES CONSULTA (ID_CONSULTA),
FOREIGN KEY(ID_MEDICO) REFERENCES CONSULTA (ID_CONSULTA)
)

CREATE TABLE EXAME (
TIPO DE EXAME VARCHAR(20),
ID_EXAME NUMERIC(10),
ID_PACIENTE NUMERIC(10),
DATA DO EXAME SMALLDATETIME,
RESULTADO VARCHAR(20),

FOREIGN KEY(ID_EXAME) REFERENCES PACIENTE (ID_PACIENTE),
FOREIGN KEY(ID_PACIENTE) REFERENCES PACIENTE (ID_PACIENTE),
FOREIGN KEY(ID_PACIENTE) REFERENCES PACIENTE (ID_PACIENTE)
)

